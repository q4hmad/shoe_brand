<h1>Update <%=@stores.name() %> </h1>

<form action="/stores_update/<%= @stores.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <label for="name">Update the store name:</label>
  <input id="name" name="namespace" type="text">

  <button type="submit">Update</button>
</form>

<form action="/stores_delete/<%= @stores.id() %>" method="post">
  <input name="_method" type="hidden" value="delete">
  <button type="submit" class="btn btn-default">Delete Store</button>
</form>
